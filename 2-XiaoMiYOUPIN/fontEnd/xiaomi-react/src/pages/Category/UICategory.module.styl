.container
        height: 100%
        display: flex
        flex-direction: column
        .header
                height: 50px
                flex-shrink: 0
        .content
                display: flex
                flex-grow: 1
                overflow: hidden
                .left
                        flex-shrink: 0
                .right
                        flex-grow: 1
                        display: flex
                        flex-direction: column
                        align-items: center
                        padding: 10px
                        overflow: auto
                        background-color: #eee
        .nav
                flex-shrink: 0