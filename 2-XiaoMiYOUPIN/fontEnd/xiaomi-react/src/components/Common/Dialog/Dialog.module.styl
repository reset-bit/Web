.fade-enter
        opacity: 0
.fade-enter-active
        opacity: 1
        transition: all .3s
.fade-leave
        opacity: 1
.fade-leave-active
        opacity: 0
        transition: all .3s

.container
        position: fixed
        top: 0
        left: 0
        height: 100%
        width: 100%
        background-color: rgba(0,0,0,.4)
        .content
                position: absolute
                height: 30%
                width: 50%
                top: 50%
                left: 50%
                transform: translate(-50%, -50%)
                background-color: #fff
